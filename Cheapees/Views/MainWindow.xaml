<Window x:Class="Cheapees.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cheapees"
        mc:Ignorable="d"
        Title="Cheapees Management Console" Height="800" Width="600" MinHeight="300" MinWidth="600">
  
  <DockPanel>
    <Menu DockPanel.Dock="Top" BorderBrush="#FF686868">
      <Menu.Background>
        <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
          <GradientStop Color="#FFF6F6F6"/>
          <GradientStop Color="#FFEAE8E8"/>
          <GradientStop Color="#FFDCD9D9" Offset="1"/>
          <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
      </Menu.Background>
      <MenuItem Header="File">
        <MenuItem Header="Help"></MenuItem>
        <MenuItem Header="Exit"></MenuItem>
      </MenuItem>
    </Menu>
    <TabControl>
      <TabItem x:Name="tabStatus">
        <TabItem.Header>
          <Label FontFamily="Segoe UI Light" FontSize="24">Status</Label>
        </TabItem.Header>
      </TabItem>
      <TabItem x:Name="tabSettings">
        <TabItem.Header>
          <Label FontFamily="Segoe UI Light" FontSize="24">Settings</Label>
        </TabItem.Header>
      </TabItem>
    </TabControl>
  </DockPanel>
</Window>
